<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.hr.examin.domain">
	<class
		name="Leaverequest"
		table="leaverequest"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>   
		<id
			name="lrId"
			type="string"
			column="lr_id"
		>
			<generator class="assigned"/>
		</id>
		<property 
			name="lrNo"
			column="lr_no"
			type="integer"
			not-null="true"
		/>
		<property
			name="lrReason"
			column="lr_reason"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="lrStartDate"
			column="lr_start_date"
			type="java.util.Date"
			not-null="true"
			length="0"
		/>
 		<property
			name="lrStartApm"
			column="lr_start_apm"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="lrEndDate"
			column="lr_end_date"
			type="java.util.Date"
			not-null="true"
			length="0"
		/>
		<property
			name="lrEndApm"
			column="lr_end_apm"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="lrTotalHours"
			column="lr_total_hours"
			type="big_decimal"
			not-null="true"
			length="7"
		/>
		<property
			name="lrTotalDays"
			column="lr_total_days"
			type="big_decimal"
			not-null="true"
			length="7"
		/>
		<property
			name="lrNextApprover"
			column="lr_next_approver"
			type="string"
			not-null="false"
			length="36"
		/>
		<property
			name="lrStatus"
			column="lr_status"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="lrCreateTime"
			column="lr_create_time"
			type="timestamp"
			not-null="true"
			length="19"
		/>
		<property
			name="lrLastChangeTime"
			column="lr_last_change_time"
			type="timestamp"
			not-null="true"
			length="19"
		/>
		<property
			name="lrSecurityNo"
			column="lr_security_no"
			type="string"
			length="36"
		/>
		<many-to-one
			name="lrCreateBy"
			column="lr_create_by"
			class="com.hr.profile.domain.Employee"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="lrEmpDept"
			column="lr_emp_dept"
			class="com.hr.configuration.domain.Department"
			not-null="true"
		>
		</many-to-one>
		<many-to-one
			name="lrLtNo"
			column="lr_lt_no"
			class="Leavetype"
			not-null="true"
		>
		</many-to-one>
		<many-to-one
			name="lrLastChangeBy"
			column="lr_last_change_by"
			class="com.hr.profile.domain.Employee"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="lrEmpNo"
			column="lr_emp_no"
			class="com.hr.profile.domain.Employee"
			not-null="true"
		>
		</many-to-one>
		<many-to-one
			name="lrEmpLocationNo"
			column="lr_emp_location"
			class="com.hr.configuration.domain.Location"
			not-null="true"
		>
		</many-to-one>

	</class>	
</hibernate-mapping>